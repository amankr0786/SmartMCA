<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Top Bar with Menu Button -->


            <!-- Modern Search Bar Below the Title -->
            <RelativeLayout
                android:id="@+id/topBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bar_gradient"
                android:padding="8dp">


                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/welcomeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Welcome to Smart MCA !"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBar"
                android:layout_marginTop="20dp"
                android:background="@drawable/search_background"
                android:padding="2dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:queryHint="Search for Study Materials such as PDFs, Videos, Docs, etc."
                    app:queryHint="Search for Study Materials PDFs, Videos, Docs, etc."
                    android:iconifiedByDefault="false"
                    app:iconifiedByDefault="false"
                    android:queryBackground="@null"
                    app:theme="@style/CustomSearchViewStyle"
                    android:background="@null" />
            </RelativeLayout>

            <View
                android:id="@+id/dividerBelowSearch"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/searchContainer"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_border" />



            <!-- Modern Divider -->

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/universitySpinner"
                android:layout_marginTop="25dp"
                android:background="@drawable/custom_border" />


            <!-- Spinner for University Selection -->

            <TextView
                android:id="@+id/chooseUniversityText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dividerBelowSearch"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/roboto"
                android:gravity="center"
                android:text="Choose University"
                android:textColor="@android:color/black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/universitySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chooseUniversityText"
                android:layout_marginTop="22dp"
                style="@style/CustomSpinnerStyle" />

            <!-- Dashboard Grid Layout -->

            <GridLayout
                android:id="@+id/dashboardGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/topBar"
                android:layout_marginTop="270dp"
                android:columnCount="2"
                android:orientation="horizontal"
                android:padding="8dp"
                android:rowCount="6">

                <!-- Example of Modern CardView -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="@color/cardBackground"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:contentDescription="Subjects Icon"
                            android:src="@drawable/ic_subjects" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:fontFamily="@font/nunito"
                            android:text="Subjects"
                            android:textColor="@android:color/black"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

